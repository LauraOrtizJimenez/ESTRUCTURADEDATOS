CIRCULO.H
#pragma once
class circulo
{
	private:
		float radio;
	public: 
		circulo();
		float get_radio();
		void set_radio(float radio1);
		double calcularareacirculo();
};
CIRCULO.CPP
#include "circulo.h"
circulo::circulo() {

}
float circulo::get_radio() {
	return radio;
}
void circulo::set_radio(float radio1) {
	radio = radio1;
}
double circulo::calcularareacirculo() {
	return (radio * radio * 3.141516);
}
CLASE CIRCULO.CPP
#include <iostream>
#include "circulo.h"
using namespace std;
int main()
{
    circulo circulito;
    float radio;
	cout << "Ingrese el radio del circulo: " << endl;
        cin >> radio;
        circulito.set_radio(radio);
        cout << "El area es: " << circulito.calcularareacirculo() << endl;
}
